@{
    ViewData["Title"] = "Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h5 class="text-center mt-2">Rutin Bakım Düzenle</h5>
<div class="container d-flex justify-content-center mt-3">
    <form style="width:300px;" asp-controller="RutinBakimlar" asp-action="Duzenle" method="post">
        <div class="form-group">
            <label asp-for="Departman"></label>
            <select asp-for="Departman" class="form-control">
                <option value="" disabled selected>Departman Seçin</option>
                <option value="Departman1">Atölye</option>
                <option value="Departman2">Merkez Ofis</option>
                <option value="Departman3">Satın Alma</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="RutinDongusu" class="control-label"></label>
            <div class="d-flex">
                <select style="width:155px;" asp-for="RutinDongusu" class="form-control mr-2">
                    <option value="" disabled selected>Rutin Döngüsü</option>
                    @for (int i = 1; i <= 31; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
                <select style="width:80px;" class="form-control" onchange="updateRutinDongusu(this)">
                    <option value="gun">Gün</option>
                    <option value="ay">Ay</option>
                    <option value="yil">Yıl</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SonYapilanBarihi">Son Yapılan Bakım Tarihi</label>
            <input asp-for="SonYapilanBTarihi" type="date" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="IslemAciklamasi"></label>
            <textarea asp-for="IslemAciklamasi" class="form-control" placeholder="İşlem Açıklaması . . ." rows="4"></textarea>
        </div>
        <button type="submit" class="btn btn-primary ml-5">Düzenlemeyi Kaydet</button>
        <button class="btn btn-danger ml-5 mt-2" onclick="deleteRow(this)">Rutin Bakımı Sil</button>
    </form>
</div>
